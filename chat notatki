sql
Copy
CREATE FUNCTION silnia(n INT) RETURNS INT 
BEGIN 
  DECLARE i INT DEFAULT 1; 
  DECLARE silnia INT DEFAULT 1; 
  REPEAT 
    SET silnia=silnia*i; 
    SET i=i+1; 
  UNTIL i>n END REPEAT; 
  RETURN silnia; 
END;
